<h2>BabyLot - Creacion de Sucursales / Usuarios </h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label "Consorcio" %>
    <%= f.select :consorciot_id, Consorciot.order(:nombre).collect{ |item|  [ " --> " + item.nombre , item.id ] }  %>     

  </div>

   <div class="field">
    <%= f.label "Sucursal" %>
    <%= f.text_field :sucursalbt, autocomplete: "off", autofocus: true  %>
  </div>


   <div class="field">
    <%= f.label "Siglas" %>
    <%= f.text_field :siglas, autocomplete: "off"  %>
  </div>


  <div class="field">
    <%= "GPPago:" %>
    <%= f.select :gppt_id, Gppt.order(:nombre).collect{ |item|  [ "-----> " + item.nombre , item.id ] }  %>     
  </div>

</br>


  <div class="field">
    <%= "Email (ej: abcxxx@central.com )" %>
  </br>
    <%= f.email_field :email, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

</br>
</br>

  <div class="field">
    <%= f.label "Tipo_de_usuario" %>
    <%= f.select :tipousuariot_id, Tipousuariot.order(:tipo_usuario).collect{ |item|  [item.tipo_usuario, item.id] } %>     
  </div>

  <div class="field">
    <%= f.label :telefono %>
    <%= f.text_field :telefono, autocomplete: "off" %>
  </div>


  <div class="field">
    <%= f.label :direccion %>
    <%= f.text_field :direccion, autocomplete: "off" %>
  </div>

</br>

  </div class="field">
    <%= f.label "Ciudad" %>
    <%= f.select :ciudadt_id, Ciudadt.order(:nombre).collect{ |item|  [ item.nombre , item.id ] } %>     
  </div>


  <div class="field">
    <%= f.label "Provincia" %>
    <%= f.select :provinciat_id, Provinciat.order(:nombre).collect{ |item|  [ item.nombre , item.id ] } %>     
  </div>



  <div class="field">
    <%= f.label "Zona" %>
    <%= f.select :zonat_id, Zonat.order(:nombre).collect{ |item|  [ item.nombre , item.id ] } %>     
  </div>


</br>

  <div class="field">
    <%= f.label "Vendedor" %>
    <%= f.text_field :vendedor, autocomplete: "off" %>
  </div>


  <div class="field">
    <%= f.label "Contacto" %>
    <%= f.text_field :contacto, autocomplete: "off" %>
  </div>



  <div class="field">
    <%= f.label "Supervisor" %>
    <%= f.select :supervisort_id, Supervisort.order(:nombre).collect{ |item|  [ item.nombre + " " + item.apellido , item.id ] } %>     
  </div>


  <div class="field">
    <%= f.label "Colector" %>
    <%= f.select :colectort_id, Colectort.order(:nombre).collect{ |item|  [ item.nombre , item.id ] } %>     
  </div>


  <div class="field">
    <%= f.label "Socio" %>
    <%= f.select :sociot_id, Sociot.order(:nombre).collect{ |item|  [ item.nombre + " " + item.apellido , item.id ] } %>     
  </div>


  <div class="field">
    <%= f.label :activo %>
    <%= f.check_box :activo, { checked: true } %>
  </div>



  <div class="actions">
    <%= f.submit "Crear ok" %>
  </div>
<% end %>

