<p id="notice"><%= notice %></p>


<h2>Control y Monitoreo de Quinielas</h2>
<h2>Leidsa</h2>
<h4>(para buscar presione CTRL+F)</h4>


<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Vendida</th>
      <th>Limite</th>     
      <th colspan="3"></th>
    </tr>
  </thead>
<% @totalqdisponible = @totalqvendida = 0 %>
  <tbody>
    <% @controlqleitsb.each do |controlqleit| %>
      <tr>
        <td><b><%= controlqleit.numero < 10 ? "0" + controlqleit.numero.to_s : controlqleit.numero  %></td>
        <td>$<%= controlqleit.vendida %></td>
        <td>$<%= controlqleit.limite %></td>
        <td><%= link_to 'Show', controlqleit %></td>
        <td><%= link_to 'Edit', edit_controlqleit_path(controlqleit) %></td>
        <td><%= link_to 'Destroy', controlqleit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @totalqdisponible += controlqleit.limite  %>
        <% @totalqvendida += controlqleit.vendida  %>
      </tr>
       
    <% end %>
  </tbody>
</table>

<h3>Total Disponible Global: <%= number_to_currency(@totalqdisponible, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %></h3>

<h3>Total Vendida: <%= number_to_currency(@totalqvendida, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %> </h3>

