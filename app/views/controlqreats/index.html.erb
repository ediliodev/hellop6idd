<p id="notice"><%= notice %></p>

<h2>Control y Monitoreo de Quinielas</h2>
<h2>Loteria Real</h2>
<h4>(para buscar presione CTRL+F)</h4>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Vendida</th>
      <th>Limite</th>     
      <th colspan="3"></th>
    </tr>
  </thead>
<% @totalqdisponible = @totalqvendida = 0 %>
  <tbody>
    <% @controlqreatsb.each do |controlqreat| %>
      <tr>
        <td><b><%= controlqreat.numero < 10 ? "0" + controlqreat.numero.to_s : controlqreat.numero  %></td>
        <td>$<%= controlqreat.vendida %></td>
        <td>$<%= controlqreat.limite %></td>
        <td><%= link_to 'Show', controlqreat %></td>
        <td><%= link_to 'Edit', edit_controlqreat_path(controlqreat) %></td>
        <td><%= link_to 'Destroy', controlqreat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @totalqdisponible += controlqreat.limite  %>
        <% @totalqvendida += controlqreat.vendida  %>
      </tr>
       
    <% end %>
  </tbody>
</table>

<h3>Total Disponible Global: <%= number_to_currency(@totalqdisponible, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %></h3>

<h3>Total Vendida: <%= number_to_currency(@totalqvendida, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %> </h3>

