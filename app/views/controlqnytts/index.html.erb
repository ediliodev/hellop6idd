<p id="notice"><%= notice %></p>

<h2>Control y Monitoreo de Quinielas</h2>
<h2>Loteria NY Tarde</h2>
<h4>(para buscar presione CTRL+F)</h4>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Vendida</th>
      <th>Limite</th>     
      <th colspan="3"></th>
    </tr>
  </thead>
<% @totalqdisponible = @totalqvendida = 0 %>
  <tbody>
    <% @controlqnyttsb.each do |controlqnytt| %>
      <tr>
        <td><b><%= controlqnytt.numero < 10 ? "0" + controlqnytt.numero.to_s : controlqnytt.numero  %></td>
        <td>$<%= controlqnytt.vendida %></td>
        <td>$<%= controlqnytt.limite %></td>
        <td><%= link_to 'Show', controlqnytt %></td>
        <td><%= link_to 'Edit', edit_controlqnytt_path(controlqnytt) %></td>
        <td><%= link_to 'Destroy', controlqnytt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @totalqdisponible += controlqnytt.limite  %>
        <% @totalqvendida += controlqnytt.vendida  %>
      </tr>
       
    <% end %>
  </tbody>
</table>

<h3>Total Disponible Global: <%= number_to_currency(@totalqdisponible, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %></h3>

<h3>Total Vendida: <%= number_to_currency(@totalqvendida, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %> </h3>

