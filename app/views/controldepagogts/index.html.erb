<p id="notice"><%= notice %></p>

<h1>Control de Limites (Max Win)</h1>

<table>
  <thead>
    <tr>
      <th>Tipo jugada</th>
      <th>Limite x ticket</th>
      <th>Limite global</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controldepagogts.each do |controldepagogt| %>
      <tr>
        <td><%= controldepagogt.tipojugada %></td>
        <td><%= controldepagogt.limitexticket %></td>
        <td><%= controldepagogt.limiteglobal %></td>
        <td><% link_to 'Show', controldepagogt %></td>
        <td><%= link_to 'Edit', edit_controldepagogt_path(controldepagogt) %></td>
        <td><% link_to 'Destroy', controldepagogt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

