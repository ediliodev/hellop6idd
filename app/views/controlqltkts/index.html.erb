<p id="notice"><%= notice %></p>

<h2>Control y Monitoreo de Quinielas</h2>
<h2>Loteria Loteka</h2>
<h4>(para buscar presione CTRL+F)</h4>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Vendida</th>
      <th>Limite</th>     
      <th colspan="3"></th>
    </tr>
  </thead>
<% @totalqdisponible = @totalqvendida = 0 %>
  <tbody>
    <% @controlqltktsb.each do |controlqltkt| %>
      <tr>
        <td><b><%= controlqltkt.numero < 10 ? "0" + controlqltkt.numero.to_s : controlqltkt.numero  %></td>
        <td>$<%= controlqltkt.vendida %></td>
        <td>$<%= controlqltkt.limite %></td>
        <td><%= link_to 'Show', controlqltkt %></td>
        <td><%= link_to 'Edit', edit_controlqltkt_path(controlqltkt) %></td>
        <td><%= link_to 'Destroy', controlqltkt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @totalqdisponible += controlqltkt.limite  %>
        <% @totalqvendida += controlqltkt.vendida  %>
      </tr>
       
    <% end %>
  </tbody>
</table>

<h3>Total Disponible Global: <%= number_to_currency(@totalqdisponible, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %></h3>

<h3>Total Vendida: <%= number_to_currency(@totalqvendida, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %> </h3>

