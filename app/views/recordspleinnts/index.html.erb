<h1>Recordspleinnts</h1>

<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>N1</th>
      <th>N2</th>
      <th>Siglas</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recordspleinnts.each do |recordspleinnt| %>
      <tr>
        <td><%= recordspleinnt.ticket %></td>
