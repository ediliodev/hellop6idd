        <td><%= recordspleinnt.n2 %></td>
        <td><%= recordspleinnt.siglas %></td>
        <td><%= recordspleinnt.monto %></td>
        <td><%= link_to 'Show', recordspleinnt %></td>
        <td><%= link_to 'Edit', edit_recordspleinnt_path(recordspleinnt) %></td>
        <td><%= link_to 'Destroy', recordspleinnt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
