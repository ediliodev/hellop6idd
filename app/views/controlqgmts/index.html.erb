<p id="notice"><%= notice %></p>


<h2>Control y Monitoreo de Quinielas</h2>
<h2>Ganamas</h2>
<h4>(para buscar presione CTRL+F)</h4>


<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Vendida</th>
      <th>Limite</th>     
      <th colspan="3"></th>
    </tr>
  </thead>
<% @totalqdisponible = @totalqvendida = 0 %>
  <tbody>
    <% @controlqgmtsb.each do |controlqgmt| %>
      <tr>
        <td><b><%= controlqgmt.numero < 10 ? "0" + controlqgmt.numero.to_s : controlqgmt.numero  %></td>
        <td>$<%= controlqgmt.vendida %></td>
        <td>$<%= controlqgmt.limite %></td>
        <td><%= link_to 'Show', controlqgmt %></td>
        <td><%= link_to 'Edit', edit_controlqgmt_path(controlqgmt) %></td>
        <td><%= link_to 'Destroy', controlqgmt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @totalqdisponible += controlqgmt.limite  %>
        <% @totalqvendida += controlqgmt.vendida  %>
      </tr>
       
    <% end %>
  </tbody>
</table>

<h3>Total Disponible Global: <%= number_to_currency(@totalqdisponible, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %></h3>

<h3>Total Vendida: <%= number_to_currency(@totalqvendida, :unit => "", :delimiter => ",", :precision => 0, :separator => ".")  %> </h3>

